
@{
    ViewData["Title"] = "LOC_CountryAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;

@model AddEditMetronic8.Areas.LOC_Country.Models.LOC_CountryModel

<div class="container">
    <div class="fs-2">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h3> Country Add Edit</h3>

                <div asp-validation-summary="ModelOnly"></div>

                <div class="container-fluid">
                    <h3>@TempData["CountryInsertMsg"]</h3>
                    <form method="post" asp-controller="LOC_Country" asp-action="Save">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.HiddenFor(x=>x.CountryID)

                        <div class="row-mb-3">
                            <div class="fw-bold"><label class="col-sm-2 col-form-label" asp-for="CountryName"><span class="text-danger fw-bold">*</span>Country Name</label></div>
                            <div class="col-sm-12"><input type="text" class="form-control" asp-for="CountryName" autocomplete="off" placeholder="Enter Country Name" /></div>
                            <span class="text-danger" asp-validation-for="CountryName"></span>
                        </div>

                      
                       


                        <br /><hr />
                        <div class="text-left">
                            <button type="submit" class="btn btn-success" value="Submit">Submit</button>
                            <a class="btn btn-secondary" asp-controller="LOC_Country" asp-action="Index">Back to List</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }









