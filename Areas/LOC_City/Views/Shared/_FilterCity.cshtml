@model AddEditMetronic8.Areas.LOC_City.Models.LOC_CityModel

<!--begin::Main-->
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
	<!--begin::Content wrapper-->
	<div class="d-flex flex-column flex-column-fluid">
		<!--begin::Content-->
		<div id="kt_app_content" class="app-content flex-column-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div id="kt_app_content_container" class="app-container container-xxl">
						<!--begin::Products-->
						<div class="card card-flush">
							<!--begin::Card header-->
							<div class="card-header align-items-center py-5 gap-2 gap-md-5">
								<!--begin::Card title-->
								<div class="col mt-3" style="font-family:'Bahnschrift';font-size:x-large">
									<!--begin::Title-->
									<span>
										<h3 class="fs-x text-dark mb-6">
											<svg style="position: relative;top:-3px;"
												 xmlns="http://www.w3.org/2000/svg" width="16" height="16"
												 fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
												<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
											</svg>
											SEARCH
										</h3>
									</span>
									<!--end::Title-->
									<hr />
									<div class="row">
										<div class="justify-content-evenly">
											<form method="post">
												<div class="row">
													<div class="col-md-4">
														<select class="form-control" name="CountryID" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))" onchange="functionOnStateChange();">
															<option value="">Select Country</option>
														</select>
														<span class="text-danger"></span>
														@* <input type="search" name="CountryName" class="form-control" placeholder="Enter Country Name"> *@
													</div>
													<div class="col-md-4">
														<select class="form-control" name="StateID" asp-for="StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))">
															<option value="">Select State</option>
														</select>

														<span class="text-danger"></span>
														@* <input type="search" name="CountryName" class="form-control" placeholder="Enter Country Name"> *@
													</div>
													<div class="col-md-4">
														<input type="search" name="CityName" asp-for="CityName" class="form-control" placeholder="Enter City Name">
													</div>
												</div>
												<br />
												<div class="row">
													<div class="col-md-6">
														<button type="submit" class="btn btn-primary mx-auto" asp-controller="LOC_City" asp-action="Index">Search</button>
														<a class="btn btn-light" asp-controller="LOC_City" asp-action="Index">Clear Filter</a>
													</div>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>