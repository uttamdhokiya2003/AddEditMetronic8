@{
	ViewData["Title"] = "LOC_StateAddEdit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data;
@model AddEditMetronic8.Areas.LOC_State.Models.LOC_StateModel

<div class="mt-5">
	<div class="row">
		<div class="col-lg-12">
			<div id="kt_app_content_container" class="app-container container-xxl">
				<div class="container">
					<div class="fs-2">
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12">
						<div class="card">
							<div class="card-body">
								<h3> @TempData["Action"] State</h3>

								@* <div asp-validation-summary="ModelOnly"></div> *@

								<div class="container-fluid">

									<form method="post" asp-controller="LOC_State" asp-action="Save">
										<div asp-validation-summary="All" class="text-danger"></div>

										@Html.HiddenFor(x=>x.StateID)
										<div class="row">
											<div class="col-lg-6">
												<div class="fw-bold"><label class="col-sm-4 col-form-label" asp-for="CountryID"><span class="text-danger fw-bold">*</span>Country Name</label></div>
												<select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
													<option value="">Select Country</option>
												</select>
												<span class="text-danger" asp-validation-for="CountryID"></span>
											</div>

											<div class="col-lg-6">
												<div class="fw-bold"><label class="col-sm-4 col-form-label" asp-for="StateName"><span class="text-danger fw-bold">*</span>State Name</label></div>
												<div class="col-sm-12"><input type="text" class="form-control" asp-for="StateName" autocomplete="off" /></div>
												<span class="text-danger" asp-validation-for="StateName"></span>
											</div>
										</div>
										<br /><hr />
										<div class="text-left">
											<button type="submit" class="btn btn-primary" value="Submit">Submit</button>
											<a class="btn btn-secondary" asp-controller="LOC_State" asp-action="Index">Back to List</a>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
    }









