
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Login_Layout.cshtml";
}


@model AddEditMetronic8.Areas.SEC_User.Models.SEC_UserModel;
<!--begin::Body-->
<div class="d-flex flex-center w-lg-50 p-10">
	<!--begin::Card-->
	<div class="card rounded-3 w-md-550px">
		<!--begin::Card body-->
		<div class="card-body p-10 p-lg-20">
			<!--begin::Signup Form-->
			<form class="form w-100" method="post" asp-controller="SEC_User" asp-action="SignUpSave">
				<!--begin::Heading-->
				<div class="text-center mb-11">
					<!--begin::Title-->
					<h1 class="text-dark fw-bolder mb-3">Sign Up</h1>
					@if (TempData["SignUpError"] != null)
					{
						<div class="alert alert-danger alert-dismissible fade show mt-5 mb-3" role="alert">
							@TempData["SignUpError"]
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					}
					<!--end::Title-->
				</div>
				<!--begin::Input group=-->
				<div class="row mt-3">
					<!--begin::Input group=-->
					<div class="fv-row mb-8 col-6">
						<!--begin::First Name-->
						<input type="text" placeholder="First Name" asp-for="FirstName" autocomplete="off" class="form-control bg-transparent" />
						<span class="text-danger" asp-validation-for="FirstName"></span>
						<!--end::First Name-->
					</div>
					<!--end::Input group=-->
					<!--begin::Input group=-->
					<div class="fv-row mb-8 col-6">
						<!--begin::Last Name-->
						<input type="text" placeholder="Last Name" asp-for="LastName" autocomplete="off" class="form-control bg-transparent" />
						<span class="text-danger" asp-validation-for="LastName"></span>
						<!--end::Last Name-->
					</div>
					<!--end::Input group=-->
				</div>

				<!--begin::Input group=-->
				<div class="fv-row mb-8">
					<!--begin::User Email-->
					<input type="email" placeholder="User Email" asp-for="EmailAddress" autocomplete="off" class="form-control bg-transparent" />
					<span class="text-danger" asp-validation-for="EmailAddress"></span>
					<!--end::User Email-->
				</div>
				<!--end::Input group=-->
				<!--begin::Input group=-->
				<div class="fv-row mb-8">
					<!--begin::User Name-->
					<input type="text" placeholder="Username" asp-for="UserName" class="form-control bg-transparent" />
					<span class="text-danger" asp-validation-for="UserName"></span>
					<!--end::User Name-->
				</div>
				<!--end::Input group=-->
				<!--begin::Input group-->
				<div class="fv-row mb-8" data-kt-password-meter="true">
					<!--begin::Wrapper-->
					<div class="mb-1">
						<!--begin::Input wrapper-->
						<div class="position-relative mb-3">
							<input class="form-control bg-transparent" type="password" placeholder="Password" asp-for="Password"  />
							<span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
								<i class="bi bi-eye-slash fs-2"></i>
								<i class="bi bi-eye fs-2 d-none"></i>
							</span>
						</div>
						<!--end::Input wrapper-->
						<!--begin::Meter-->
						<div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
							<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
							<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
							<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
							<div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
						</div>
						<!--end::Meter-->
					</div>
					<!--end::Wrapper-->
					<!--begin::Hint-->
					<div class="text-muted">Use 8 or more characters with a mix of letters, numbers &amp; symbols.</div>
					<!--end::Hint-->
				</div>
				<!--end::Input group=-->
				<!--begin::Submit button-->
				<div class="d-grid mb-10">
					<button type="submit" class="btn btn-primary">
						<!--begin::Indicator label-->
						<span class="indicator-label">Sign Up</span>
						<!--end::Indicator label-->
						<!--begin::Indicator progress-->
						<span class="indicator-progress">
							Please wait...
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
						<!--end::Indicator progress-->
					</button>
				</div>
				<!--end::Submit button-->
				<!--begin::Sign up-->
				<div class="text-gray-500 text-center fw-semibold fs-6">
					Already a User?
					<a class="link-primary" asp-controller="SEC_User" asp-action="Index">Login</a>
				</div>
				<!--end::Sign up-->
			</form>
			<!--end::Form-->
		</div>
		<!--end::Card body-->
	</div>
	<!--end::Card-->
</div>
<!--end::Body-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}



