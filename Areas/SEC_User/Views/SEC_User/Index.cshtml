@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Login_Layout.cshtml";
}
@using AddEditMetronic8.Areas.SEC_User.Models;
@model AddEditMetronic8.Areas.SEC_User.Models.SEC_UserModel
<!--begin::Body-->
<div class="d-flex flex-center w-lg-50 p-10">
	<!--begin::Card-->
	<div class="card rounded-3 w-md-550px">
		<!--begin::Card body-->
		<div class="card-body p-10 p-lg-20">
			<!--begin::Form-->
			<form class="form w-100" method="post" novalidate="novalidate" id="kt_sign_in_form" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Login">
				
				
				<!--begin::Heading-->
				<div class="text-center mb-11">
					<!--begin::Title-->
					<h1 class="text-dark fw-bolder mb-3">Address Book</h1>
					<!--end::Title-->
					<!--begin::Subtitle-->
					<div class="text-gray-500 fw-semibold fs-6"></div>
					<!--end::Subtitle=-->
				</div>
				<!--begin::Heading-->
				
			
				@if (TempData["SignUpSuccess"] != null)
				{
					<div class="alert alert-success alert-dismissible fade show mt-5 mb-3" role="alert">
						@TempData["SignUpSuccess"]
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				}
						@if (TempData["Error"] != null)
					{
						  <div class="text-danger mb-5 text-center fs-3">
							@Html.Raw(TempData["Error"])
						</div>
						}

			
				<!--begin::Input group=-->
				<div class="fv-row mb-8">
					<!--begin::UserName-->
					<input type="text" placeholder="Name" autocomplete="off" asp-for="UserName" class="form-control bg-transparent" />
					<span asp-validation-for="UserName" class="text-danger">
						
						@if (TempData["UserName"] != null)
						{
							@Html.Raw(TempData["UserName"])
						}
					</span>
					<!--end::UserName-->
				</div>
				<!--end::Input group=-->
				<div class="fv-row mb-3">
					<!--begin::Password-->
					<input type="password" placeholder="Password" name="password" asp-for="Password" class="form-control bg-transparent" />
					<span asp-validation-for="Password" class="text-danger">
						
						@if (TempData["Password"] != null)
						{
							@Html.Raw(TempData["Password"])
						}
					</span>
					<!--end::Password-->
				</div>
				<!--end::Input group=-->
				<!--begin::Wrapper-->
				<div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
					<div></div>
					<!--begin::Link-->
					<a href="#" class="link-primary">Forgot Password ?</a>
					<!--end::Link-->
				</div>
				<!--end::Wrapper-->
				<!--begin::Submit button-->
				<div class="d-grid mb-10">
					<button type="submit" class="btn btn-primary">
						<!--begin::Indicator label-->
						<span class="indicator-label">Sign In</span>
						<!--end::Indicator label-->
						<!--begin::Indicator progress-->
						<span class="indicator-progress">
							Please wait...
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
						<!--end::Indicator progress-->
					</button>
				</div>
				<!--end::Submit button-->
				<!--begin::Sign up-->
				<div class="text-gray-500 text-center fw-semibold fs-6">
					Not a Member yet?
					<a asp-controller="SEC_User" asp-action="SignUp" class="link-primary">Sign up</a>
				</div>
				<!--end::Sign up-->
			</form>
			<!--end::Form-->
		</div>
		<!--end::Card body-->
	</div>
	<!--end::Card-->
</div>
<!--end::Body-->